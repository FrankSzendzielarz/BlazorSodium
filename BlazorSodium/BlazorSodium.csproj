<Project Sdk="Microsoft.NET.Sdk.Razor">

   <PropertyGroup>
      <TargetFramework>net7.0</TargetFramework>
      <Nullable>disable</Nullable>
      <ImplicitUsings>disable</ImplicitUsings>
      <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
      <LangVersion>preview</LangVersion>
      <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
      <Title>BlazorSodium</Title>
      <Authors>Jack Edwards</Authors>
      <Description>Simple wrapper over libsodium.js to use in Blazor WASM projects</Description>
      <PackageProjectUrl></PackageProjectUrl>
      <RepositoryUrl>https://github.com/Jack-Edwards/BlazorSodium</RepositoryUrl>
      <PackageLicenseExpression>MIT</PackageLicenseExpression>
      <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
      <IncludeSymbols>True</IncludeSymbols>
      <SymbolPackageFormat>snupkg</SymbolPackageFormat>
      <Version>0.1.0-beta</Version>
      <PackageVersion>0.1.0-beta</PackageVersion>
   </PropertyGroup>

   <ItemGroup>
      <Content Include="Npm\src\blazorSodium.js">
         <CopyToOutputDirectory>Never</CopyToOutputDirectory>
      </Content>
   </ItemGroup>

   <ItemGroup>
      <SupportedPlatform Include="browser" />
   </ItemGroup>

   <ItemGroup>
      <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="7.0.0-rc.1.22427.2" />
   </ItemGroup>

   <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
      <Exec Command="npm install" />
      <Exec Command="npm run build" />
   </Target>

</Project>
